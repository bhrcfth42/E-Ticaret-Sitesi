
@{
    Layout = null;
}

@model IEnumerable<eCompare.Models.Kategori>

<!-- Banner -->
<div class="banner bgwhite p-t-40 p-b-40">
    <div class="container">
        <div class="row">

            @foreach (var kategori in Model)
            {
                <div class="col-sm-10 col-md-8 col-lg-4 m-l-r-auto">
                    <!-- block1 -->
                    <div class="block1 hov-img-zoom pos-relative m-b-30">
                        <img src="@kategori.resim_yol" alt="@kategori.ad">

                        <div class="block1-wrapbtn w-size2">
                            <!-- Button -->
                            @Html.ActionLink(kategori.ad, "Index", "Product", new { kategori_id = kategori.id }, new { @class = "flex-c-m size2 m-text2 bg3 hov1 trans-0-4" })
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

