@model IEnumerable<eCompare.Models.Renk>

@{
    Layout = null;
}
<div class="col-lg-12" style="overflow:auto">
    <table class="table table-striped">
        <tr>
            <th>
                Adı
            </th>
            <th>
                Renk
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.adi)
                </td>
                <td>
                    <div class="color-filter" style="background-color:@item.kod;display:block;width:25px;height:25px;cursor:pointer;border-radius: 50%;">
                    </div>
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "RenkDuzenle", new { id = item.id }) |
                    @Html.ActionLink("Sil", "RenkSil", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</div>