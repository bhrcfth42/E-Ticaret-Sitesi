@model IEnumerable<eCompare.Models.Kategori>

@{
    Layout = null;
}

<div class="col-lg-12" style="overflow:auto">
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ad)
            </th>
            <th>
                Video
            </th>
            <th>
                Resim
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ad)
                </td>
                <td>
                    @if (item.video_yol != null)
                    {
                        <video controls width="200">
                            <source src="@item.video_yol" />
                        </video>
                    }
                </td>
                <td>
                    <img src="@item.resim_yol" width="150" height="100" style="object-fit:cover" />
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "KategoriDuzenle", new { id = item.id }) |
                    @Html.ActionLink("Sil", "KategoriSil", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</div>