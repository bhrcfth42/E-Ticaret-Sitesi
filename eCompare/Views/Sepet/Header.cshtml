
@{
    Layout = null;
}
@model IEnumerable<eCompare.Models.Sepet>
@helper TotalHesapla()
{
    double toplam = 0;
    if (Model != null)
    {
        foreach (var urun in Model)
        {
            toplam += (urun.urun_adet * urun.Urun.fiyat);
        }
    }
    @toplam
}
@helper AdetHesapla()
{
    int adet = 0;
    if (Model != null)
    {
        @Model.Count()
    }
    else
    {
        @adet
    }
}

