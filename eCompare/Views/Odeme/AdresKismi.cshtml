
@{
    Layout = null;
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mb-4">Adres</h4>
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    @Html.DropDownList("il_id", null, "İl Seçiniz", htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-sm-6">
                    @Html.DropDownList("ilce_id", null, "İlçe Seçiniz", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <input type="text" class="form-control border" id="InputAdress"
                       placeholder="Adres Giriniz" name="InputAdress">
            </div>
        </div>
    </div>
</div>
